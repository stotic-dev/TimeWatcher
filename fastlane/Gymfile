workspace("TimerWatcherWorkspace.xcworkspace")
scheme("TimeWatcher")
clean(true)
configuration("Release")
output_directory("./.build")    # store the ipa in this folder
output_name("TimeWatcher")  # the name of the ipa file
include_bitcode(true)
export_method("app-store")
xcargs("-skipPackagePluginValidation")
export_options({
  method: "app-store",
  provisioningProfiles: {
      "taichi.satou.TimeWatcher" => "TimeWatcher_Distribution",
      "taichi.satou.TimeWatcher.TimeWatcherWidget" => "TimeWatcher_Widget_Distribution"
    }
})